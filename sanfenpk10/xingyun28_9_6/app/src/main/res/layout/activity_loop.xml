<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.c256.xinyun28.activity.LoopActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_content"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"></android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/iv1"
            android:src="@mipmap/ivi4"
            android:onClick="click"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/iv2"
            android:scaleType="fitXY"
            android:onClick="click"
            android:src="@mipmap/ivi3"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/iv3"
            android:scaleType="fitXY"
            android:layout_marginTop="3dp"
            android:onClick="click"
            android:layout_weight="1"
            android:src="@mipmap/ivi2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/iv4"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@mipmap/ivi1"
            android:onClick="click"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

</RelativeLayout>
