<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_above="@+id/rg_bottom"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_title2"
        android:layout_toEndOf="@+id/tv_title2"></FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:background="#cecece"
        android:layout_above="@+id/rg_bottom"
        android:layout_height="0.5dp"
        android:id="@+id/textView2" />
    <RadioGroup
        android:id="@+id/rg_bottom"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_title2"
        android:layout_toEndOf="@+id/tv_title2">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@drawable/table_text1"
            android:text="资讯"
            android:paddingTop="8dp"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/table1"
            android:layout_height="55dp" />
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="开奖"
            android:textSize="12sp"
            android:textColor="@drawable/table_text1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/table4"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="比分"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:textColor="@drawable/table_text1"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/table3"
            android:layout_height="50dp" />
        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="走势"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:textColor="@drawable/table_text1"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:button="@null"
            android:drawableTop="@drawable/table2"
            android:layout_height="50dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="15dp"
        android:text="开奖"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@color/main_color"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_title2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="15dp"
        android:text="开奖"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@color/main_color"
        android:layout_height="70dp" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title3"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="15dp"
        android:text="比分"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@color/main_color"
        android:layout_height="100dp" />
</RelativeLayout>
