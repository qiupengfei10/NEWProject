<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/srl"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.a0567.shishicai.MainCopyActivity">
            <TextView
                android:layout_width="match_parent"
                android:text="蛋蛋资讯"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:background="@color/main_color"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/iv_banner"
                android:scaleType="fitXY"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/bottom"
                    android:scaleType="fitXY"
                    android:layout_height="100dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:onClick="click"
                        android:clickable="true"
                        android:text="实时开奖"
                        android:padding="10dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:gravity="bottom|center_horizontal"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="click"
                        android:text="走势图"
                        android:padding="10dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/btn3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="开奖预测"
                        android:padding="10dp"
                        android:gravity="bottom|center_horizontal"
                        android:clickable="true"
                        android:onClick="click"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="3dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorAccent"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="近期热点"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/item11"
                android:onClick="click"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/item1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="60dp" />

                <RelativeLayout
                    android:layout_toLeftOf="@+id/item1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv1"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="还十分十分十分大惊失色胜多负少"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="2017-08-31"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/item21"
                android:onClick="click"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/item2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="60dp"/>

                <RelativeLayout
                    android:layout_toLeftOf="@+id/item2"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv2"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="还十分十分十分大惊失色胜多负少"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="2017-08-31"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/item31"
                android:onClick="click"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/item3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="60dp" />

                <RelativeLayout
                    android:layout_toLeftOf="@+id/item3"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv3"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="还十分十分十分大惊失色胜多负少"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="2017-07-21"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/item41"
                android:onClick="click"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/item4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="60dp"/>

                <RelativeLayout
                    android:layout_toLeftOf="@+id/item4"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv4"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="还十分十分十分大惊失色胜多负少"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="2017-07-21"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_loading"
                    android:layout_width="wrap_content"
                    android:text="版权归@string/app_name所有"
                    android:clickable="true"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>